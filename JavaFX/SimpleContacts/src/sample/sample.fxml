<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <top>
        <HBox>
            <MenuBar maxWidth="Infinity" prefHeight="25.0" prefWidth="694.0">
                <Menu text="Contacts...">
                    <MenuItem fx:id="addNewItem" onAction="#handleAddContact" text="Add New Contact..." />
                    <MenuItem fx:id="editItem" onAction="#handleEditContact" text="Edit Contact..." />
                    <MenuItem fx:id="delItem" onAction="#handleDeleteContact" text="Delete Contact..." />
                    <SeparatorMenuItem />
                    <MenuItem fx:id="exitProg" onAction="#handleExit" text="Exit" />
                </Menu>
            </MenuBar>
        </HBox>
    </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <TableView prefHeight="416.0" prefWidth="600.0">
              <columns>
                <TableColumn prefWidth="75.0" text="First Name" />
                <TableColumn prefWidth="75.0" text="Last Name" />
                  <TableColumn prefWidth="75.0" text="Phone Number" />
                  <TableColumn prefWidth="75.0" text="Notes" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TableView>
         </children>
      </VBox>
   </center>

</BorderPane>
